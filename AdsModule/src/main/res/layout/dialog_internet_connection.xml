<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutDialogShow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="15.60dp">

    <LinearLayout
        android:id="@+id/layoutDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_shape"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingTop="19.50dp"
        android:paddingBottom="19.50dp">

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="74.10dp"
            android:layout_height="74.10dp"
            android:src="@drawable/ic_wifi_not_found" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6.50dp"
            android:gravity="center"
            android:paddingStart="9.10dp"
            android:paddingEnd="9.10dp"
            android:text="INTERNET CONNECTION REQUIRED"
            android:textColor="@color/black"
            android:textSize="18.20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="9.10dp"
            android:layout_marginEnd="9.10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="15.60dp"
            android:text="Please enable internet so the application can provide the latest update to you."
            android:textColor="@color/black"
            android:textSize="13dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_ok"
                android:layout_width="0dp"
                android:layout_height="39.00dp"
                android:layout_weight="1"
                android:background="@drawable/background_selected"
                android:backgroundTint="@color/BackgroundCardColor"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="19.50dp"
                android:paddingEnd="19.50dp"
                android:text="Ok"
                android:textColor="@color/mainColor"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/txt_retry"
                android:layout_width="0dp"
                android:layout_height="39.00dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_selected"
                android:backgroundTint="@color/mainColor"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="19.50dp"
                android:paddingEnd="19.50dp"
                android:text="Retry"
                android:textColor="@color/black"
                android:textSize="13dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
